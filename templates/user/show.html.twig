{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <table class="table table-striped">
        <thead class="maincolor">
        <tr class="whitetext">
            <th>User</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>UsernameCanonical</th>
                <td>{{ user.usernameCanonical }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>EmailCanonical</th>
                <td>{{ user.emailCanonical }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ user.enabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Salt</th>
                <td>{{ user.salt }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>LastLogin</th>
                <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ConfirmationToken</th>
                <td>{{ user.confirmationToken }}</td>
            </tr>
            <tr>
                <th>PasswordRequestedAt</th>
                <td>{{ user.passwordRequestedAt ? user.passwordRequestedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Naam</th>
                <td>{{ user.naam }}</td>
            </tr>
            <tr>
                <th>Tussenvoegsel</th>
                <td>{{ user.tussenvoegsel }}</td>
            </tr>
            <tr>
                <th>Achternaam</th>
                <td>{{ user.achternaam }}</td>
            </tr>
            <tr>
                <th>Geboortedatum</th>
                <td>{{ user.geboortedatum ? user.geboortedatum|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Telefoonnr</th>
                <td>{{ user.telefoonnr }}</td>
            </tr>
            <tr>
                <th>Adres</th>
                <td>{{ user.adres }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ user.postcode }}</td>
            </tr>
            <tr>
                <th>Plaats</th>
                <td>{{ user.plaats }}</td>
            </tr>
            <tr>
                <th>Profielfoto</th>
                <td>{{ user.profielfoto }}</td>
            </tr>
            <tr>
                <th>Idkaartnummer</th>
                <td>{{ user.idkaartnummer }}</td>
            </tr>
            <tr>
                <th>Iban</th>
                <td>{{ user.iban }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ user.facebook }}</td>
            </tr>
            <tr>
                <th>Linkedin</th>
                <td>{{ user.linkedin }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-primary bluebutton"><i class="fas fa-backward"></i></a>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-success greenbutton float-right"><i class="fas fa-edit"></i></a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
