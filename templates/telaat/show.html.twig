{% extends 'base.html.twig' %}

{% block title %}Telaat{% endblock %}

{% block body %}
    <table class="table table-striped">
        <thead class="maincolor">
        <tr class="whitetext">
            <th>Telaat</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ telaat.id }}</td>
            </tr>
            <tr>
                <th>Datum</th>
                <td>{{ telaat.datum ? telaat.datum|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Tijd</th>
                <td>{{ telaat.tijd ? telaat.tijd|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('telaat_index') }}" class="btn btn-primary bluebutton">back to list</a>

    <a href="{{ path('telaat_edit', {'id': telaat.id}) }}" class="btn btn-success greenbutton float-right">edit</a>

    {{ include('telaat/_delete_form.html.twig') }}
{% endblock %}
