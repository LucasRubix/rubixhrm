<form method="post" action="{{ path('ziek_delete', {'id': ziek.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ziek.id) }}">
    <button class="btn btn-danger mt-5">Delete</button>
</form>
